<%- include("../partials/header") %>

	<h1 style="text-align:center;">
		Edit <%=campground.name%>
	</h1>
	<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
		<div style="width:30%; margin: 30px auto;">
			<div class="form-group">
			<label >Location</label>
			<input class="form-control" type=text name="campground[name]" value="<%=campground.name%>">
			</div>
			<div class="form-group">
			<label>Price</label>
			<input 
			class="form-control" type="number" name="campground[price]" value="<%= campground.price%>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
			<label >Image</label>
			<input class="form-control" type=text name="campground[image]" value="<%=campground.title%>">
			</div>
			<div class="form-group">
			<label >Description</label>
			<input class="form-control" type=text name="campground[description]" value="<%=campground.description%>">
			</div>
			<div class="form-group">
			<button type="submit" class="btn btn-sm btn-primary btn-block">
				Submit!
			</button>
			</div>
			<a href="/campgrounds">Go Back</a>		
		</div>
	</form>


<%- include("../partials/footer") %>